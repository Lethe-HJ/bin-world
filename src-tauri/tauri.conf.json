{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bin-world",
  "version": "0.1.0",
  "identifier": "com.bin-world.app",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Bin World",
        "width": 1200,
        "height": 800,
        "url": "http://localhost:1420/src-tauri/webview/",
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["**"],
        "requireLiteralLeadingDot": false,
        "directories": ["**"]
      }
    }
  }
}
